    <meta itemprop="name" content="{{post.title}} - {{meta_title}}">
    <meta itemprop="description" content="Epic places, juicy photos, this blog post is about travelling in {{post.title}}">
    <meta itemprop="image" content="https://raw.githubusercontent.com/sandraszenti/pirates-blog/master{{post.image}}">
     <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{post.title}} - {{meta_title}}">
    <meta name="twitter:description" content="Epic places, juicy photos, this blog post is about travelling in {{post.title}}">
    <meta name="twitter:creator" content="@whatevertechno">
    <!-- Twitter summary card with large image must be at least 280x150px -->
    <meta name="twitter:image:src" content="https://raw.githubusercontent.com/sandraszenti/pirates-blog/master{{post.image}}">

    <!-- Open Graph data -->
    <meta property="og:title" content="{{post.title}} - {{meta_title}}" />
    <meta property="og:type" content="blog" />
    <meta property="og:url" content="http://carib.idoestravel.com{{post.url}}" />
    <meta property="og:image" content="https://raw.githubusercontent.com/sandraszenti/pirates-blog/master{{post.image}}" />
    <meta property="og:description" content="Epic places, juicy photos, this blog post is about travelling in {{post.title}}" />
    <meta property="og:site_name" content="Caribbean Island Hoppers" />
    {{/is}}

